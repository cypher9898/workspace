<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3"
    tools:context=".MainPages.MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Settings"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/red_round_button2"
        android:onClick="settings"
        android:text="프로필 설정"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/allPosts"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_round_button2"
        android:onClick="allPosts"
        android:text="모든 게시물"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/myPosts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myPosts"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_round_button2"
        android:onClick="myPosts"
        android:text="내 게시물"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addForm"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_round_button2"
        android:onClick="addform"
        android:text="폼 추가"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inspector"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_round_button2"
        android:onClick="inspector"
        android:text="목격자 보기"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addForm"
        app:layout_constraintVertical_bias="1.0" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/report"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/red_round_button2"
        android:onClick="report"
        android:text="보고서"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>