<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4E4E4">

    <ImageView
        android:id="@+id/ViewProfileImage"
        android:layout_width="131dp"
        android:layout_height="143dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/viewprofilename"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toTopOf="@+id/viewprofilephone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/ViewProfileImage" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="23dp"
        android:hint="번호:"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewprofilephone"
        app:layout_constraintEnd_toStartOf="@+id/viewprofilephone"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="34dp"
        android:hint="이메일:"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewprofileemail"
        app:layout_constraintEnd_toStartOf="@+id/viewprofileemail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="25dp"
        android:hint="이름:"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewprofilename"
        app:layout_constraintEnd_toStartOf="@+id/viewprofilename"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewprofilephone"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/NoUsersFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="257dp"
        android:text="   존재하지 않는 유저 "
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewprofileemail"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="59dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewprofilephone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/viewprofilename" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RemovalOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/rounded_ok_buttons"
        android:text="메세지 보내기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>